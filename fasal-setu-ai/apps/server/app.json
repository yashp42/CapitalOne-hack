{
  "name": "fasal-setu-ai-server",
  "description": "Backend server for Fasal Setu AI",
  "repository": "https://github.com/Aksh10x/CapitalOne-hack",
  "keywords": ["node", "express", "api"],
  "success_url": "/",
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Environment for Node.js application",
      "value": "production"
    },
    "NPM_CONFIG_PRODUCTION": {
      "description": "Install production dependencies only",
      "value": "true"
    },
    "NPM_CONFIG_PACKAGE_LOCK": {
      "description": "Don't generate package-lock.json",
      "value": "false"
    }
  }
}
